<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Music Site</title>
  <link rel="stylesheet" href="/public/css/style.css" />
</head>
<body>
  <div class="container">
    <h1>🎵 Music Library</h1>
    <form method="get" action="/">
      <input type="text" name="q" placeholder="Search..." />
      <button type="submit">🔍</button>
    </form>
    <a href="/upload" class="upload-btn">Upload New Track</a>
    <div class="track-list">
      <% tracks.forEach(track => { %>
        <div class="track">
          <img src="<%= track.cover || '/public/default.jpg' %>" alt="Cover" />
          <div>
            <h2><%= track.title %> — <%= track.artist %></h2>
            <audio controls onplay="fetch('/play/<%= track.id %>', {method: 'POST'})">
              <source src="<%= track.music %>" type="audio/mpeg">
            </audio>
            <p>👁 <%= track.plays %> plays</p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>